<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
  	<servlet-name>statsCalc</servlet-name>
  	<servlet-class>com.KeepingItSimpleApps.statscalculator.server.StatsServiceServerImplementation</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>statsCalc</servlet-name>
  	<url-pattern>/stats_calculator/stats</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Stats_Calculator.html</welcome-file>
  </welcome-file-list>

</web-app>
